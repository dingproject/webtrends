/**
 * Admin settings form.
 */
function webtrends_admin_settings_form($form_state) {
  $form = array();

  $form['webtrends_domain'] = array(
    '#type' => 'textfield',
    '#title' => t('Hostname'),
    '#description' => t('The hostname of the tracked site.'),
    '#default_value' => variable_get('webtrends_domain', FALSE),
  );

  $form['webtrends_dcs_id'] = array(
    '#type' => 'textfield',
    '#title' => t('Site ID'),
    '#description' => t('The site identification key.'),
    '#default_value' => variable_get('webtrends_dcs_id', FALSE),
  );

  $form['webtrends_old_dcs_id'] = array(
    '#type' => 'textfield',
    '#title' => t('Site ID'),
    '#description' => t('The site identification key for the v9.3.0 js. Leave empty to disable v9.3.0.'),
    '#default_value' => variable_get('webtrends_old_dcs_id', FALSE),
  );

  $form['webtrends_error_pages'] = array(
    '#type' => 'checkbox',
    '#title' => t('Enable "Error pages" parameters'),
    '#description' => t('Add webtrends error page parameters to url, for 404 pages'),
    '#default_value' => variable_get('webtrends_error_pages', FALSE),
  );

  // Delete the generated file js/webtrends_include1.js.
  $form['#submit'][] = 'drupal_clear_js_cache';

  return system_settings_form($form);
}

